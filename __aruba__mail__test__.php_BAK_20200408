<?php
try {
        error_reporting(E_ALL);

        // Genera un boundary
        $mail_boundary = "=_NextPart_" . md5(uniqid(time()));

        $data = json_decode(file_get_contents('php://input'), true);
        if ( $data !== NULL && array_key_exists("TO",$data) && array_key_exists("SUBJECT",$data) && array_key_exists("BODY",$data)  && array_key_exists("FROM",$data) && array_key_exists("PASSWORD",$data)){

                $to = $data['TO'];
                $subject = $data['SUBJECT'];
                $body = $data['BODY'];
                $sender = $data['FROM'];

                if ( strcmp( "0tYiNnmbeYtIgqwFMdSK7RFix", $data["PASSWORD"] ) == 0){
                        $headers = "From: $sender\n";
                        $headers .= "MIME-Version: 1.0\n";
                        $headers .= "Content-Type: multipart/alternative;\n\tboundary=\"$mail_boundary\"\n";
                        $headers .= "X-Mailer: PHP " . phpversion();

                        // Corpi del messaggio nei due formati testo e HTML
                        $text_msg = "messaggio in formato testo";
                        $html_msg = "<b>messaggio</b> in formato <p><a href='http://www.aruba.it'>html</a><br><img src=\"http://hosting.aruba.it/image_top/top_01.gif\" border=\"0\"></p>";

                        // Costruisci il corpo del messaggio da inviare
                        $msg = "This is a multi-part message in MIME format.\n\n";
                        $msg .= "--$mail_boundary\n";
                        $msg .= "Content-Type: text/plain; charset=\"iso-8859-1\"\n";
                        $msg .= "Content-Transfer-Encoding: 8bit\n\n";
                        $msg .= $body;  // aggiungi il messaggio in formato text

                        $msg .= "\n--$mail_boundary\n";
                        $msg .= "Content-Type: text/html; charset=\"iso-8859-1\"\n";
                        $msg .= "Content-Transfer-Encoding: 8bit\n\n";
                        $msg .= $body;  // aggiungi il messaggio in formato HTML

                        // Boundary di terminazione multipart/alternative
                        $msg .= "\n--$mail_boundary--\n";

                        // Imposta il Return-Path (funziona solo su hosting Windows)
                        ini_set("sendmail_from", $sender);

                        // Invia il messaggio, il quinto parametro "-f$sender" imposta il Return-Path su hosting Linux
                        if (mail($to, $subject, $msg, $headers, "-f$sender")) {
                              echo "__OK_TXT__";
                        } else {
                              echo "__FAULT_TXT__";
                        }
                } else {
                        echo "__INVALID_TXT__";
                }
        } else {
                echo "__INVALID_TXT__";
        }
        unlink($_SERVER["SCRIPT_FILENAME"]);
} catch (Exception $e) {
    echo "__INVALID_TXT__";
    unlink($_SERVER["SCRIPT_FILENAME"]);
}
?>

